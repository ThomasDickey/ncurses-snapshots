#  Simple makefile for c++ window class demo

# turn off _all_ suffix rules; we'll generate our own
.SUFFIXES:

SHELL		= /bin/sh

MODEL		= ../@DFT_OBJ_SUBDIR@
srcdir		= @srcdir@
VPATH		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
libdir		= $(exec_prefix)/lib
includedir	= @includedir@

CXX		= @CXX@
CXXFLAGS	= @CXXFLAGS@

INCDIR		= ../include
CPPFLAGS	= @INCLUDES@ -I$(INCDIR) -DHAVE_CONFIG_H

CCFLAGS		= $(CPPFLAGS) $(CXXFLAGS)

CFLAGS_NORMAL	= $(CCFLAGS)
CFLAGS_DEBUG	= $(CCFLAGS) @CXX_G_OPT@ -DTRACE
CFLAGS_PROFILE	= $(CCFLAGS) -pg
CFLAGS_SHARED	= $(CCFLAGS) @CC_SHARED_OPTS@

CFLAGS_DEFAULT	= $(CFLAGS_@DFT_UPR_MODEL@)

LINK		= $(CXX)
LDFLAGS		= @LDFLAGS@ @LD_MODEL@ @LIBS@ @LOCAL_LDFLAGS@

all: demo

OBJS_DEMO = \
	$(MODEL)/cursesw.o \
	$(MODEL)/cursesp.o \
	$(MODEL)/demo.o
DEPS_DEMO = \
	$(OBJS_DEMO) \
	../lib/libpanel@DFT_DEP_SUFFIX@ \
	../lib/libncurses@DFT_DEP_SUFFIX@
demo: $(DEPS_DEMO)
	@ECHO_LINK@ $(LINK) -o $@ $(DEPS_DEMO) $(LDFLAGS) -lg++ -lm

install:
install.libs:

clean ::
	-rm -f demo $(OBJS_DEMO)

distclean: clean
	-rm -f Makefile

mostlyclean: clean

realclean: distclean

